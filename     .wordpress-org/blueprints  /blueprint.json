{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/plugins.php",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "GatherPress Statistics",
        "blogdescription": "Powering GatherPress Communities with Statistics.",
        "users_can_register": 1,
        "permalink_structure": "/%year%/%monthnum%/%postname%/"
      }
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
          "GATHERPRESS_ALPHA_VERSION": 1
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require '/wordpress/wp-load.php'; $user_id = wp_create_user('editor', 'editorpass', 'editor@localhost.test'); (new WP_User($user_id))->set_role('editor');"
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "updateUserMeta",
      "meta": {
          "admin_color": "modern"
      },
      "userId": 1
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
          "resource": "wordpress.org\/plugins",
          "slug": "gatherpress"
      },
      "options": {
          "activate": true
      }
    },
    {
      "step": "installPlugin",
      "pluginZipFile": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=carstingaxion/gatherpress-statistics"
      },
      "options": {
          "activate": true
      }
    },
    {
      "step": "importWxr",
      "file": {
        "resource": "url",
        "url": "https://raw.githubusercontent.com/GatherPress/gatherpress-demo-data/main/GatherPress-demo-data-0.33.0.xml"
      }
    }
  ]
}